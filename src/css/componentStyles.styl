/*
OTHERS
*/

.boxshadow {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.bottom_shadow
  box-shadow: 0px 2px rgba(0,0,0,0.2);

.tab {
  display:inline-block;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.title-media {
  color: white;
}

.subtitle-media {
  color: white;
}

hr {
  background-color:lightgray;
  height:1px;
  border: none;
}

.input-box {
  padding: 8px;
}

/*
  INPUT CONTAINER
*/

.main-input-container {
  position:relative;
}

.input-container.outlined
  min-height 50px

.input-container.filled
  min-height 52px

.input-container.outlined.dense
  min-height 35px

.input-container.filled.dense
  min-height 35px

.input-label-outlined
  position absolute
  top -7px
  z-index: 50px
  margin-left: 12px;

.input-icons-padding
  padding: 0px 4px

.input-message-padding-no-icon
  margin-left: 10px

.input-message-padding-icon
  margin-left: 47px

/*
  INPUT FIELD
*/
.input-field {
  width:100%;
  border-style:none;
  outline: none;
  z-index:0;
  background:none;
  margin-left: 5px;
}

/*
  MODAL/DRAWER
*/
.drawer {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 2500;
  top: 0;
  right: 0;
}

.drawer_page {
  height: calc(100vh - 60px);
  min-width: 200px;
  position: absolute;
  z-index: 2500;
  top: 0;
  right: 0;
}

.drawer-animation {
  transition: 0.3s;
}

.drawer_container {
  z-index: 1210;
  overflow-x: hidden;
  overflow-y: auto;
}

.bg-modal
  background-color rgba(0, 0, 0, 0.20)

/*
  BUTTONS
*/

.btn.contained:hover
  box-shadow: 0px 3px 4px 2px rgba(0,0,0,0.2);
  border: none;

.btn.textbutton
  border: none;

.btn.outlined
  border-radius: 5px;

.btn.rounded {
  border-radius: 50px;
}

.btn.xs, .btn-dropdown-container.xs
  padding: 4px

.btn.xs.fab
  min-width: 20px
  min-height: 20px
  
.btn.sm, .btn-dropdown-container.sm
  padding: 6px

.btn.sm.fab
  min-width: 22px
  min-height: 22px

.btn.md
  padding: 8px

.btn-dropdown-container.md
  padding: 9px

.btn.md.fab
  min-width: 25px
  min-height: 25px

.btn.lg
  padding: 10px

.btn-dropdown-container.lg
  padding: 15px

.btn.lg.fab
  min-width: 32px
  min-height: 32px

.btn.xl
  padding: 12px

.btn-dropdown-container.xl
  padding: 23px;

.btn.xl.fab
  min-width: 40px
  min-height: 40px

.btn.fab
  border-radius: 50%
  border: none

.btngroup > .h-btn:first-child .btn-content
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;

.btngroup > .h-btn:last-child .btn-content
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;

.btngroup > .btn-dropdown:first-child
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;

.btngroup > .btn-dropdown:last-child
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;


.btngroup.rounded
  border-radius: 50px

.btngroup.rounded:hover > .h-btn .btn-content.textbutton,
.btngroup.rounded:hover > .h-btn:last-child .btn-content.textbutton,
.btngroup.rounded:hover > .h-btn .btn-content.outlined
  border-radius: 5px;

.btngroup.rounded:hover > .h-btn .btn-content.contained,
.btngroup.rounded:hover > .h-btn:last-child .btn-content.contained
  border-radius: 0px;

.btngroup.rounded > .h-btn:first-child .btn-content.contained,
.btngroup.rounded > .h-btn:first-child .btn-content.textbutton
  border-top-left-radius: 25px;
  border-bottom-left-radius: 25px;

.btngroup.rounded > .h-btn:last-child .btn-content.contained,
.btngroup.rounded > .h-btn:last-child .btn-content.textbutton
  border-top-right-radius: 25px;
  border-bottom-right-radius: 25px;

.btngroup.rounded > .btn-dropdown:first-child,
.btngroup.rounded:hover > .btn-dropdown:first-child
  border-top-left-radius: 25px;
  border-bottom-left-radius: 25px;

.btngroup.rounded > .btn-dropdown:last-child,
.btngroup.rounded:hover > .h-btn .btn-content.btn-dropdown:last-child
  border-top-right-radius: 25px;
  border-bottom-right-radius: 25px;

.btn-icon > .fa-icon
  padding: 3px;

